<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_main"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/bottom_bar_color"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_mian_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/selector_main_home"
        android:drawablePadding="-2dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="10sp" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_mian_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:checked="false"
        android:drawableTop="@drawable/selector_main_history"
        android:drawablePadding="-2dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="10sp" />


    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_mian_find"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:checked="false"
        android:drawableTop="@drawable/selector_main_find"
        android:drawablePadding="-2dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="10sp" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_mian_msg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:checked="false"
        android:drawableTop="@drawable/selector_main_msg"
        android:drawablePadding="-2dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="10sp" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_mian_mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:checked="false"
        android:drawableTop="@drawable/selector_main_mine"
        android:drawablePadding="-2dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="10sp" />

</RadioGroup>